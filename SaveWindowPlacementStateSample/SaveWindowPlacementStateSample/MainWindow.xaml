<Window x:Class="SaveWindowPlacementStateSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveWindowPlacementStateSample"
        mc:Ignorable="d"
        Title="Window 位置を保存・復元する" Height="350" Width="525"
        Closing="Window_Closing" SourceInitialized="Window_SourceInitialized"
        >
    <StackPanel Orientation="Vertical">
        <Button Padding="10" Margin="10" Content="ウィンドウ情報を読込します" 
                Click="Button_Click1"
                />
        <Button Padding="10" Margin="10" Content="ウィンドウ情報を書込します" 
                Click="Button_Click2"
                />
    </StackPanel>
</Window>
